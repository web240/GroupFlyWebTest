@using GroupflyGroup.FrontEnd.ObjectFramework.Strings
@using GroupflyGroup.FrontEnd.Web.Models
@model FeArticleTemplateModelList
@{
    IEnumerable<FeArticleTemplateModel> list;
    if (ViewBag.TemplateType == FeValueValues.FeTemplateType_ArticleSystem)
    {
        list = Model.listArticleTemplateModel;
    }
    else
    {
        list = Model.listChannelTemplateModel;
    }
}
@foreach (var item in list)
{
    <li>
        <div class="img"><span><img src="@item.ImageURL" alt="" onload="SetImgAutoSize(this)" /></span></div>
        <div class="info">
            <p>模板名称：<span title="@item.TemplateName ">@(item.TemplateName.Length > 10 ? item.TemplateName.Substring(0, 10) + "..." : @item.TemplateName) </span><b class="fa fa-download fa-lg fr" onclick="downTemplate('@item.Id')"></b><b class="fa fa-pencil fa-lg fr" onclick="editTemplate('@item.TemplateType','@item.Id','bak')"></b></p>
            <p>模板说明：<span title="@item.Description">@item.Description</span></p>
            <p>模板目录：<span>@item.DirectoryName </span></p>
            <p>备份时间：<span> @item.CreatedOn</span></p>
            <div class="btn">
                <span><b class="fa fa-bitbucket"></b><a href="javascript:javascript:void(0);" onclick="$.messager.confirm('提示', '确认删除?', function(r){if (r){delTemplate('@item.TemplateType','@item.Id','bak');}})">删除</a></span>
                <span></span>
                <span><b class="fa fa-refresh"></b><a href="javascript:javascript:void(0);" onclick="$.messager.confirm('提示', '确认恢复?', function(r){if (r){OperateBackHistory('@item.Id','@item.TemplateType' );}})">恢复</a></span>
            </div>
        </div>
    </li>
}